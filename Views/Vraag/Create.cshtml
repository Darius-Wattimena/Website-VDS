@using System.Web.Mvc.Html
@model List<NederlandsWebsiteVDS.Models.Vraag>
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <hr/>
            <h2>Create</h2>
            <input type="button" value="Nieuwe Vraag" id="changePage" onclick="location.href='@Url.Action("CreateVraag")'" class="btn btn-default btn-primary" />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div id="contentdiv">
                    @foreach (var vraag in Model)
                    {
                        Html.RenderPartial("CreateVraag", vraag, new ViewDataDictionary {{"id", vraag.Id}});
                    }
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Opslaan" class="btn btn-default btn-success"/>
                        <input type="button" value="Overslaan" id="changePage" onclick="location.href='@Url.Action("Index", "Admin")'" class="btn btn-default btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
    <hr />
</div>
